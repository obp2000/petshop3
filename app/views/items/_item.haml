%tr{ :id => dom_id( item ), :onclick => "$.get('#{edit_item_path(item)}')" }
  %td= item.name
  %td= render :partial => "#{SharedPath}/size", :collection => item.sizes unless item.sizes.empty?  
  %td= render :partial => "#{SharedPath}/colour", :collection => item.colours unless item.colours.empty? 
  %td= item.category_name
  %td.align_right= number_to_currency item.price
  %td= link_to_delete item
