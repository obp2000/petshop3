#accordionResizer
  #left_accordion
    - [ SummerCatalogItem, WinterCatalogItem, CatalogItem ].each do |season_class|
      %h3= link_to image_tag( season_class.season_icon ) + season_class.season_name       
      %div
        %b= link_to_season( season_class )
        - Category.all_of( season_class ).each do |category|
          = link_to_category( category, season_class )       
    %h3#cart_header= link_to image_tag( Cart.nav_image ) + Cart.nav_text
    #cart= render "carts/cart"
= set_drop_receiving_element "cart"